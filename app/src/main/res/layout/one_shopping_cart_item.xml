<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp"
        android:background="#fff"
        android:layout_marginBottom="1dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/Item_Image_List_View_shopping"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Item_Name_List_View_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="Item name Arabic"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Item_Price_List_View_shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="00.0"
                    android:textColor="@color/priceColor"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginLeft="6dp"
                    android:text="SR"
                    android:textColor="@color/priceColor"
                    android:textStyle="bold"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/counter_background"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Item_Increment_Btn_List_View_s"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="20sp"
                        android:background="@null"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/Item_Counter_List_View_s"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="0"/>

                    <Button
                        android:id="@+id/Item_Decrement_Btn_List_View_s"
                        android:layout_width="40sp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:background="@null"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Total"/>


                <TextView
                    android:id="@+id/total_price_view_shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="0"/>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>